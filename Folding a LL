public class Solution{
  public static Node foldorReorderLL(Node head) {
      if(head==null) {
         return null;
      }
      Node mid=getMiddle(head);
      Node secondhalf=mid.next;
      mid.next=null;
      
      Node nn=Reverse(secondhalf);
      Node temp=head;
      while(temp!=null && nn!=null) {
         Node tn=temp.next;
         Node cn=nn.next;
         temp.next=nn;
         temp=tn;
         nn.next=temp;
         nn=cn;
      }
      return head;
}
int getMiddle(Node head)
    {    
         if(head==null){
             return -1;
         }
         if(head.next==null){
             return head.data;
         }
         
         Node slow=head;
         Node fast=head;
         while(fast!=null && fast.next!=null){
             fast=fast.next.next;
             slow=slow.next;
         }
         return slow.data;
    }
    
    Node reverseList(Node head){
    
        Node Prev=null;
        Node Next=null;
        Node Current=head;
        while(Current!=null){
            Next=Current.next;
            Current.next=Prev;
            Prev=Current;
            Current=Next;
        }
        
        head=Prev;
        return head;
    }

}
